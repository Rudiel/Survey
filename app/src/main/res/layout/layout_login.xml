<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivFondoLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/llLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilUsuario"
            style="@style/TextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/tema_verde">

            <EditText
                android:id="@+id/etUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usuario"
                android:minWidth="200dp"
                android:singleLine="true"
                android:textSize="@dimen/tutorial_texto_s" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPassword"
            style="@style/TextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/tema_verde">

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:minWidth="200dp"
                android:singleLine="true"
                android:textSize="@dimen/tutorial_texto_s" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btLoginCred"
            android:layout_width="@dimen/login_button_w"
            android:layout_height="@dimen/login_button_h"
            android:layout_marginTop="@dimen/login_button_space"
            android:background="@drawable/button_green"
            android:minWidth="200dp"
            android:text="@string/login_signin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/botones_texto" />


    </LinearLayout>

    <ImageView
        android:id="@+id/ivLoginLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/llLogin" />

</RelativeLayout>