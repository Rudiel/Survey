<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:elevation="4dp">


        <ImageView
            android:layout_width="@dimen/lista_logo_w"
            android:layout_height="@dimen/lista_logo_h"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_name" />

        <ImageView
            android:id="@+id/ivIdioma"
            android:layout_width="@dimen/lista_idioma_w"
            android:layout_height="@dimen/lista_idioma_h"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/lenguaje" />

        <ImageView
            android:id="@+id/ivLogout"
            android:layout_width="@dimen/lista_idioma_w"
            android:layout_height="@dimen/lista_idioma_h"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/ivIdioma"
            android:src="@drawable/logout" />

        <ImageView
            android:id="@+id/ivAtras"
            android:layout_width="@dimen/lista_idioma_w"
            android:layout_height="@dimen/lista_idioma_h"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@android:drawable/ic_menu_view"
            android:visibility="gone" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical" />
</LinearLayout>