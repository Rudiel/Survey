<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/menu_soporte"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/survey_text" />


    <RelativeLayout
        android:id="@+id/rlFaq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvFaq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/support_faq"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/survey_text" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/survey_text" />

    <RelativeLayout
        android:id="@+id/rlMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvSupportMailIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/support_mail"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/survey_text" />

        <TextView
            android:id="@+id/tvSupportMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tvSupportMailIcon"
            android:gravity="center"
            android:text="@string/support_correo"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/survey_text" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/survey_text" />

    <RelativeLayout
        android:id="@+id/rlPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvSupportLlamadaIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/support_phone"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/survey_text" />

        <TextView
            android:id="@+id/tvSupportLlamada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tvSupportLlamadaIcon"
            android:gravity="center"
            android:text="@string/support_number"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/survey_text" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/survey_text" />


</LinearLayout>