<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/survey_rosado</item>
        <item name="colorPrimaryDark">@color/survey_rosado</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:colorForeground">@android:color/white</item>
    </style>

    <style name="MyTheme" parent="android:Theme.DeviceDefault.Dialog">
        <item name="android:alertDialogStyle">@style/ProgressBarCustom</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:tint">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>

    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/survey_rosado</item>
        <item name="colorAccent">@color/survey_rosado</item>
    </style>


    <style name="ProgressBarCustom">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:labelTextSize">16sp</item>
    </style>

    <style name="CustomTextInputLayoutStyle.ErrorTextStyle" parent="TextAppearance.Design.Error">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="StarCustomRatingBar" parent="@android:style/Widget.Holo.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_full</item>
    </style>

    <style name="SpinnerStyle" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/custom_spinner</item>
        <item name="android:height">@dimen/encuesta_spinner_h</item>
        <item name="android:minHeight">@dimen/encuesta_spinner_h</item>
        <item name="android:textColor">@color/tema_verde</item>
    </style>

    <style name="SpinnerStyle1" parent="@android:style/Widget.DeviceDefault.Spinner">
        <item name="android:background">@drawable/custom_spinner</item>
        <item name="android:height">@dimen/encuesta_spinner_h</item>
        <item name="android:textColor">@color/survey_text</item>
        <item name="android:minHeight">@dimen/encuesta_spinner_h</item>
    </style>

    <style name="EdittextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/custom_spinner</item>
        <item name="android:height">@dimen/encuesta_spinner_h</item>
        <item name="android:minHeight">@dimen/encuesta_spinner_h</item>
        <item name="colorControlActivated">@color/survey_rosado</item>
        <item name="colorControlNormal">@color/survey_rosado_bajo</item>
        <item name="colorControlHighlight">@color/survey_rosado</item>
    </style>


    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RatingBarStyle" parent="@android:style/Widget.DeviceDefault.RatingBar">
        <item name="colorControlNormal">@color/survey_rosado_bajo</item>
        <item name="colorControlHighlight">@color/survey_rosado</item>
        <item name="colorControlActivated">@color/survey_rosado</item>
        <item name="android:colorActivatedHighlight">@color/survey_rosado</item>

    </style>

    <style name="CheckBoxStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/survey_rosado_bajo</item>
        <item name="android:textSize">@dimen/textApparence</item>
        <item name="colorControlActivated">@color/survey_rosado</item>
        <item name="android:colorActivatedHighlight">@color/survey_rosado</item>
        <item name="colorControlHighlight">@color/survey_rosado</item>
    </style>

    <style name="RadioButtonStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/survey_rosado_bajo</item>
        <item name="android:textSize">@dimen/textApparence</item>
        <item name="colorControlActivated">@color/survey_rosado</item>
        <item name="android:colorActivatedHighlight">@color/survey_rosado</item>
        <item name="colorControlHighlight">@color/survey_rosado</item>
    </style>

    <style name="SpinnerStyle3" parent="@android:style/Widget.DeviceDefault.Spinner">
        <item name="android:height">@dimen/encuesta_spinner_h</item>
        <item name="android:minHeight">@dimen/encuesta_spinner_h</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/textApparence</item>
    </style>

    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">

        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

</resources>
