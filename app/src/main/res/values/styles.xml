<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tema_verde</item>
        <item name="colorPrimaryDark">@color/tema_verde</item>
        <item name="colorAccent">@color/tema_naranja</item>
        <item name="android:textColorPrimary">@color/tema_naranja</item>
        <item name="android:colorForeground">@color/tema_naranja</item>
    </style>

    <style name="MyTheme" parent="android:Theme.DeviceDefault.Dialog">
        <item name="android:alertDialogStyle">@style/ProgressBarCustom</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">@color/tema_verde</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">@color/tema_verde</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ProgressBarCustom">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:labelTextSize">16sp</item>
    </style>

    <style name="CustomTextInputLayoutStyle.ErrorTextStyle" parent="TextAppearance.Design.Error">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="StarCustomRatingBar" parent="@android:style/Widget.Holo.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_full</item>
    </style>

    <style name="SpinnerStyle" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/custom_spinner</item>
        <item name="android:height">@dimen/encuesta_spinner_h</item>
        <item name="android:minHeight">@dimen/encuesta_spinner_h</item>
        <item name="android:textColor">@color/tema_verde</item>
    </style>

    <style name="SpinnerStyle1" parent="@android:style/Widget.DeviceDefault.Spinner">
        <item name="android:background">@drawable/custom_spinner</item>
        <item name="android:height">@dimen/encuesta_spinner_h</item>
        <item name="android:minHeight">@dimen/encuesta_spinner_h</item>
    </style>

    <style name="EdittextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:background">@drawable/custom_spinner</item>
        <item name="android:height">@dimen/encuesta_spinner_h</item>
        <item name="android:minHeight">@dimen/encuesta_spinner_h</item>
    </style>

</resources>
